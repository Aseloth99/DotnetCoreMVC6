@model Category

@*asp-action="Edit" şart değil*@
<form method="post"> 
	@*padding of 3, margin top of 4*@
	<div class="border p-3 mt-4">
		@*padding bottom of 2*@
		<div class="row pb-2">
			<h2 class="text-primary">Edit Category</h2>	
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3"> @*margin bottom of 3*@
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control"/>
			<span asp-validation-for="Name" class="text-secondary"></span>
		</div>
		<div class="mb-3">
			<label asp-for="DisplayOrder">Display Order</label>
			<input asp-for="DisplayOrder" class="form-control"/>			
			<span asp-validation-for="DisplayOrder" class="text-secondary"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back To list
		</a>
	</div> 
</form>

@*Hata olduğunda servera hit yapmadan doğrulama için*@
@section Scripts{ 
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}